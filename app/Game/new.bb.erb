<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Game</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @game.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Sport: </td>
                <td class="itemValue"><input type="text" name="game[Sport]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Date: </td>
                <td class="itemValue"><input type="text" name="game[Date]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Venue: </td>
                <td class="itemValue"><input type="text" name="game[Venue]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
