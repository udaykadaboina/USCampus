<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @game.object %>
    <h1>Edit <%= @game.Sport%></h1>
    <%= link_to "Delete", :action => :delete, :id => @game.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @game.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Sport: </td>
              <td class="itemValue"><input type="text" name="game[Sport]" value="<%= @game.Sport %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Date: </td>
              <td class="itemValue"><input type="text" name="game[Date]" value="<%= @game.Date %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Venue: </td>
              <td class="itemValue"><input type="text" name="game[Venue]" value="<%= @game.Venue %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
