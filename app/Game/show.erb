<div data-role="page" data-add-back-btn="false">

  <div data-role="header" data-position="inline">
    <h1><%= @game.Sport %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="arrow-l" data-direction="reverse">Back</a>
    <a href="<%= url_for :action => :edit, :id => @game.object %>" class="ui-btn-right" data-icon="star">Edit</a>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      
          <li>
            <div class="itemLabel">Sport</div>
            <div class="itemValue"><%= @game.Sport %></div>
          </li>
      
          <li>
            <div class="itemLabel">Date</div>
            <div class="itemValue"><%= @game.Date %></div>
          </li>
      
          <li>
            <div class="itemLabel">Venue</div>
            <div class="itemValue"><%= @game.Venue %></div>
          </li>
      
    </ul>
  </div>

</div>
