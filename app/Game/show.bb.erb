<div data-role="page" data-add-back-btn="true">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1><%= @game.Sport %></h1>
    <%= link_to "Edit", :action => :edit, :id => @game.object %>
  </div>

  <div data-role="content">
    <table>
      
      <tr>
    	<td class="itemLabel">Sport</td>
        <td class="itemValue"><%= @game.Sport%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Date</td>
        <td class="itemValue"><%= @game.Date%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Venue</td>
        <td class="itemValue"><%= @game.Venue%></td>
      </tr>
      
    </table>
  </div>

</div>
